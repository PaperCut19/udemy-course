<%- include("partials/header.ejs") %>

<body>
    <div class="d-flex flex-column align-items-center justify-content-center text-center mt-4">
        <h1>Welcome to the Blog Platform</h1>
    
        <form action="/user-request" method="POST">
            <label for="user-request3">
                <%= phrase %>
            </label> <br>
            <textarea type="text" name="user-request1" placeholder="type here..." class="rounded"></textarea>
            <input type="submit" value="submit" class="rounded-pill">
        </form>
    </div>

    <section>
        <div class="container">
            <div class="row g-3 mt-2">

                <% arrayOfCards1.forEach(card => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card rounded-4">
                            <div class="card-body">
                                <h5 class="card-title"> <%= card.title %> </h5>
                                <p class="card-text"> <%= card.content %> </p>
                            </div>
                        </div>
                    </div>
                <% }) %>

            </div> 
        
    </section>
    
<%- include("partials/footer.ejs") %>